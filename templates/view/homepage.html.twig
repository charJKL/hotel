{% extends 'base.html.twig' %} 

{% block stylesheets %}
	{{ parent() }}
	{{ encore_entry_link_tags("homepage") }}
{% endblock %}

{% block javascripts %}
	{{ parent() }}
	{{ encore_entry_script_tags("homepage") }}
{% endblock %}


{% form_theme form "form/reservation.html.twig" %}
{% block body %}
	{{ form_start(form, {attr: {"class": "reservation-form"}}) }}
		{% if form.vars.submitted == true and form.vars.valid == true %}
			<div class="reservation-result status-true"> {{ "reservation.reservation.saved"|trans }}</div>
		{% endif %}
		{% if form.vars.submitted == true and form.vars.valid == false %}
			<div class="reservation-result status-false"> {{ "reservation.reservation.error"|trans }}</div>
		{% endif %}

		<div class="reservation-line reservation-line-dates">
			{{ form_row(form.checkInAt) }}
			{{ form_row(form.checkOutAt) }}
		</div>
		<div class="reservation-line reservation-line-info">
			{{ form_row(form.roomsAmount) }}
			{{ form_row(form.peopleAmount) }}
			{{ form_row(form.contact) }}
			{{ form_row(form.book) }}
		</div>
		<div class="reservation-sheet reservation-line-sheet">
			{# Calendar sheet will be generated by JS #}
			{# We want page working with disabled JS, it's only helper, making date pick more pleasing. #}
			{# Although we provide custom calendar do not remove browser native picker coming form type="date". #}
			{# Rendering it without JS make no sense, because it won't work. #}
		</div>
	{{ form_end(form) }}


	{{ render_esi(controller('App\\Controller\\MainController::offers', {locale: app.request.locale})) }}
{% endblock %}